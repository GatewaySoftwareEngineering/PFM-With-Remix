// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        String   @id @default(uuid())
  note      String
  category  String
  date      DateTime @default(now())
  type      String
  amount    Int
  currency  String
}
